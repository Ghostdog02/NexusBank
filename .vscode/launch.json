    {
      "name": "Debug Express Server",
      "type": "node",
      "request": "launch",
      "program": "/mount/Projects/NexusBank/server/bin/www",
      "console": "integratedTerminal",
      "restart": true,
      "env": {
        "NODE_ENV": "development",
        "PORT": "3000"
      },
      "skipFiles": [
        "/mount/Projects/NexusBank/server/node_modules/**/*.js",
        "<node_internals>/**",
        "<node_internals>/**/*.js",
        "<node_internals>/internal/**",
        "**/node_modules/**",
        "node_modules/**/*.js"
      ],
      "smartStep": true
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:4200",
      "webRoot": "/mount/Projects/NexusBank/client",
      "runtimeExecutable": "/usr/bin/brave-browser-stable",
      "skipFiles": [
        "$/mount/Projects/NexusBank/client/node_modules/**/*.js",
        "$/mount/Projects/NexusBank/client/lib/**/*.js",
        "<node_internals>/**",
        "<node_internals>/**/*.js",
        "<node_internals>/internal/**",
        "**/node_modules/**",
        "node_modules/**/*.js"
      ]
    }
  ]
}
