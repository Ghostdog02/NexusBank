{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    // {
    //     "name": "Launch Node debugger",
    //     "program": "/mount/Projects/Courses/MeanStackGuide/backend",
    //     "request": "launch",
    //     "type": "node"
    // },
    {
      "name": "Debug Express Server",
      "type": "node",
      "request": "launch",
      "program": "/mount/Projects/NexusBank/server/bin/www",
      "console": "integratedTerminal",
      "restart": true,
      "env": {
        "NODE_ENV": "development",
        "PORT": "3000"
      },
      "skipFiles": [
        "/mount/Projects/NexusBank/server/node_modules/**/*.js",
        "<node_internals>/**",
        "<node_internals>/**/*.js",
        "<node_internals>/internal/**",
        "**/node_modules/**",
        "node_modules/**/*.js"
      ],
      "smartStep": true
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:4200",
      "webRoot": "/mount/Projects/NexusBank/client",
      "runtimeExecutable": "/usr/bin/brave-browser-stable",
      "sourceMaps": true,
      "skipFiles": [
        "/mount/Projects/NexusBank/client/node_modules/**/*.js",
        "/mount/Projects/NexusBank/client/lib/**/*.js",
        "<node_internals>/**",
        "**/node_modules/**",
        "**/node_modules/**/*.js",

        // Skip Angular framework files
        "**/@angular/**",
        "**/rxjs/**",
        "**/zone.js/**",

        // Skip webpack and build artifacts
        "**/webpack/**",
        "**/main.js",
        "**/polyfills.js",
        "**/runtime.js",
        "**/vendor.js",
        "**/*.chunk.js",

        // Skip generated/compiled files
        "**/.angular/**",
        "**/dist/**",
        "**/*.ngfactory.js",
        "**/*.ngstyle.js",

        // Skip specific problematic files
        "**/index.js",
        "**/bootstrap",
        "**/platform-browser-dynamic/**",

        // Skip Chrome extension files
        "chrome-extension://**"
      ],
      "smartStep": true,
      "enableContentValidation": false,
      "trace": false
    }
  ]
}
